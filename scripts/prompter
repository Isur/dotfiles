#!/usr/bin/env bash

DIRECTORY="/home/$(whoami)/prompts"
PROMPT='Use the prompt from attached file'
declare -A CUSTOM_ARGS

while [[ $# -gt 0 ]]; do
    case $1 in
        --dir|--directory)
            DIRECTORY="$2"
            shift 2
            ;;
        --help|-h)
            echo "Usage: $0 [OPTIONS]"
            echo ""
            echo "Options:"
            echo "  --dir, --directory DIR    Directory to search for files (default: /home/\$(whoami)/prompts)"
            echo "  --help, -h                Show this help message"
            echo "  --<key> <value>           Custom arguments to inject into the prompt"
            echo ""
            echo "Example:"
            echo "  $0 --dir /path/to/my/dir --branch dev --env production"
            echo ""
            echo "Custom arguments will be appended to the prompt like:"
            echo "  'Use the prompt from attached file. Variables: branch=dev, env=production'"
            exit 0
            ;;
        --*)
            # Capture any other --option as a custom argument
            key="${1#--}"
            if [[ $# -lt 2 || "$2" == --* ]]; then
                echo "Error: Option $1 requires a value"
                exit 1
            fi
            CUSTOM_ARGS["$key"]="$2"
            shift 2
            ;;
        *)
            echo "Unknown option: $1"
            echo "Use --help for usage information"
            exit 1
            ;;
    esac
done

if ! command -v fzf &> /dev/null; then
    echo "Error: fzf is not installed. Please install it first."
    exit 1
fi

if ! command -v fd &> /dev/null; then
    echo "Error: fd is not installed. Please install it first."
    exit 1
fi

if [ ! -d "$DIRECTORY" ]; then
    echo "Error: Directory '$DIRECTORY' does not exist."
    exit 1
fi

selected_file=$(fd --type f . "$DIRECTORY" | fzf --prompt="Select a file: " --height=40% --border)

if [ -z "$selected_file" ]; then
    echo "No file selected. Exiting."
    exit 0
fi

if [ ${#CUSTOM_ARGS[@]} -gt 0 ]; then
    vars_string=""
    for key in "${!CUSTOM_ARGS[@]}"; do
        vars_string+="${key}=${CUSTOM_ARGS[$key]}, "
    done
    vars_string="${vars_string%, }"
    PROMPT="${PROMPT}. Variables: ${vars_string}"
fi

COMMAND="opencode run '${PROMPT}' --file "

$COMMAND "$selected_file"
