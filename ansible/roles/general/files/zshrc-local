export ZSH="$HOME/.oh-my-zsh"

# LANGUAGE
export LANG="en_US.UTF-8"

# THEME
ZSH_THEME="bira"

# PLUGINS
plugins=(ansible bun docker fzf gh git golang kubectl nestjs ng node npm nvm poetry redis-cli rsync ssh ssh-agent systemd tmux uv z zsh-autosuggestions zsh-fzf-history-search zsh-syntax-highlighting)

# OH MY ZSH
source $ZSH/oh-my-zsh.sh

# CUSTOM BINDS
bindkey -v # vi mode
bindkey '^e' edit-command-line
bindkey -s '^f' 'tmux-sessionizer\n'
bindkey -M menuselect 'h' vi-backward-char
bindkey -M menuselect 'k' vi-up-line-or-history
bindkey -M menuselect 'l' vi-forward-char
bindkey -M menuselect 'j' vi-down-line-or-history

KEYTIMEOUT=1
function zle-line-init {
    echo -ne '\e[5 q'     # beam cursor
}

function zle-keymap-select {
  if [[ $KEYMAP == vicmd ]]; then
    echo -ne '\e[1 q'   # block cursor
  else
    echo -ne '\e[5 q'   # beam cursor
  fi
}

zle -N zle-keymap-select
zle -N zle-line-init

# ALIASES
alias dotfiles="cd $HOME/dotfiles"
alias zsh-refresh="source $HOME/.zshrc"


# PATHS
export BUN_INSTALL="$HOME/.bun"
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

export PATH="$HOME/dotfiles/scripts:$PATH"
export PATH="$HOME/apps:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/go/bin:$PATH"
export PATH="$PATH:$HOME/.dotnet/tools"
export PATH="$BUN_INSTALL/bin:$PATH"

# DEFAULT APPS
export EDITOR="nvim"
export BROWSER="brave"

