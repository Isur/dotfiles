            "headset": "ï–",
            "phone": "ï‚•",
            "phone-muted": "î´—",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": [
                "ï€¦",
                "ï€§",
                "ï€¨"
            ]
        },
        "on-click": "$HOME/.config/waybar/sink-toggle.sh",
        "on-click-right": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ï†¼",
            "default": "ğŸœ"
        },
        "escape": true,
        "exec": "python3 $HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources folder
        "on-click": "playerctl play-pause"
    },
    "custom/power": {
        "format": "ó°£‡ ",
        "tooltip": true,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "on-click-right": "ghostty --wait-after-command -e ~/dotfiles/scripts/updater",
        "menu-actions": {
            "shutdown": "shutdown -h now",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate",
            "update": "ghostty --wait-after-command -e ~/dotfiles/scripts/updater",
            "wallchange": "ghostty -e ~/dotfiles/scripts/wallchange"
        }
    },
    "custom/notifications": {
        "return-type": "json",
        "exec": "$HOME/.config/waybar/notifications.py 100",
        "interval": 5,
        "tooltip": true,
        "on-click": "ghostty --wait-after-command -e makoctl history",
        "on-click-right": "makoctl restore",
        "on-click-middle": "sh -c 'pkill -x mako; mako >/dev/null 2>&1 &'"
    }
}
