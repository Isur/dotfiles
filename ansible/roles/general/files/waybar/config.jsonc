    "memory": {
        "interval": 30,
        "format": "î¿…  {used:0.1f}G",
        "tooltip-format": "Memory"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}Â°C {icon}",
        "format-icons": [
            "ï«",
            "ï‹‰",
