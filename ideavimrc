" Leader
let mapleader=" "

" Leader Maps
map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>r <Action>(RenameElement)
map <leader>e <Action>(ShowErrorDescription)
map <leader>a <Action>(ShowIntentionActions)
map <leader>t <Action>(ActivateTerminalToolWindow)
map <leader>us <Action>(FindUsages)
map <leader>k <Action>(QuickTypeDefinition)

" Methods
map [[ <Action>(MethodUp)
map ]] <Action>(MethodDown)
" Go to
map gd <Action>(GotoDeclaration)
map gD <Action>(GotoTypeDeclaration)
map gi <Action>(GotoImplementation)
map gT <Action>(GotoTest)
" Go to Errors
map g[ <Action>(GotoPreviousError)
map g] <Action>(GotoNextError)

" Tabs
map <Tab> <Action>(NextTab)
map <S-Tab> <Action>(PreviousTab)
map <leader>x <Action>(CloseEditor)

" Move selected
vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv

" Nerdtree
set NERDTree
let g:NERDTreeMapActivateNode='l'
let g:NERDTreeMapJumpParent='l'
nnoremap <leader>fe :NERDTreeFocus<CR>

" Options
set ideajoin
set relativenumber
set number
set clipboard=unnamed
set scrolloff=8
set tabstop=4
set shiftwidth=4
set expandtab
set breakindent



