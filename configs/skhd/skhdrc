# Focus

# Display
ctrl + alt - s : yabai -m display --focus west
ctrl + alt - g : yabai -m display --focus east

# Window
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - l : yabai -m window --focus east
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north

# Space - not working right now
ctrl + alt - p : yabai -m space --focus prev;
ctrl + alt - n : yabai -m space --focus next;

# Window Tree

# Balance
ctrl + alt - b : yabai -m space --balance
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# Rotate
ctrl + alt - r : yabai -m space --rotate 270
ctrl + alt - y : yabai -m space --mirror y-axis
ctrl + alt - x : yabai -m space --mirror x-axis

# Movement
ctrl + shift + alt - l : yabai -m window --swap east
ctrl + shift + alt - h : yabai -m window --swap west
ctrl + shift + alt - j : yabai -m window --swap south
ctrl + shift + alt - k : yabai -m window --swap north

hyper - l : yabai -m window --warp east
hyper - h : yabai -m window --warp west
hyper - j : yabai -m window --warp south
hyper - k : yabai -m window --warp north

ctrl + shift + alt - s : yabai -m window --display west; yabai -m display --focus west
ctrl + shift + alt - g : yabai -m window --display east; yabai -m display --focus east

ctrl + shift + alt - 1 : yabai -m window --space 1;
ctrl + shift + alt - 2 : yabai -m window --space 2;
ctrl + shift + alt - 3 : yabai -m window --space 3;
ctrl + shift + alt - 4 : yabai -m window --space 4;
ctrl + shift + alt - 5 : yabai -m window --space 5;
ctrl + shift + alt - 6 : yabai -m window --space 6;
ctrl + shift + alt - 7 : yabai -m window --space 7;
ctrl + shift + alt - 8 : yabai -m window --space 8;
ctrl + shift + alt - 9 : yabai -m window --space 9;

# Toggle float
ctrl + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
